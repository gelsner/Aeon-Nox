<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video BannerInfo -->
	<include name="VideoBannerInfo">
		<control type="group">
			<visible>Control.IsVisible(505) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<posy>-65</posy>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>1080</posy>
				<width>1740</width>
				<height>964</height>
				<texture border="40">panel_reflect.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>90</posx>
				<posy>148</posy>
				<width>1740</width>
				<height>964</height>
				<texture border="40">listpanel_back.png</texture>
			</control>           
            <control type="fixedlist" id="505">
				<viewtype label="BannerInfo">icon</viewtype>
				<posx>120</posx>
				<posy>179</posy>
				<height>905</height>
				<width>980</width>
                <onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>505</onup>
				<ondown>505</ondown>
				<orientation>vertical</orientation>
				<focusposition>0</focusposition>
                <movement>4</movement>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<pagecontrol>60</pagecontrol>
				<visible>Container.Content(tvshows)</visible>
				<itemlayout width="980" height="181">
					<control type="image">
						<width>980</width>
						<height>181</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<fadetime>400</fadetime>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
						<colordiffuse>BAffffff</colordiffuse>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
                    <control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<width>980</width>
                            <height>181</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>400</fadetime>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>2</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
						<control type="image">
							<width>400</width>
							<height>181</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<fadetime>400</fadetime>
							<bordersize>2</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
					</control>
					<control type="image">
						<posx>895</posx>
						<posy>0</posy>
						<width>80</width>
						<height>80</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<bordersize>1</bordersize>
					</control>
					<control type="group">
						<posx>15</posx>
						<posy>15</posy>
						<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
					</control>
				</itemlayout>
				<focusedlayout width="980" height="181">
                    <control type="group">
                        <animation type="Focus">
							<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
                        <control type="image">
							<width>980</width>
							<height>181</height>
							<aspectratio>stretch</aspectratio>
							<texture background="true">$VAR[BannerThumb]</texture>
							<fadetime>400</fadetime>
							<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
						</control>
                        <control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<width>980</width>
                                <height>181</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
								<fadetime>400</fadetime>
								<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<width>400</width>
								<height>181</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
								<fadetime>400</fadetime>
								<bordersize>2</bordersize>
							</control>
						</control>
                        <control type="image">
							<posx>895</posx>
							<posy>6</posy>
							<width>80</width>
							<height>80</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>2</bordersize>
						</control>
						<control type="group">
							<posx>15</posx>
							<posy>15</posy>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
                    </control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<posx>1098</posx>
				<posy>180</posy>
				<width>14</width>
				<height>896</height>
				<onright>61</onright>
				<onleft>505</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground></texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
			</control>
			<control type="image">
				<posx>1113</posx>
				<posy>182</posy>
				<width>685</width>
				<height>385</height>
				<aspectratio>scale</aspectratio>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<fadetime>400</fadetime>
				<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
				<bordersize>2</bordersize>
			</control>
			<control type="label">
				<posx>1113</posx>
				<posy>570</posy>
				<width>628</width>
				<height>60</height>
				<font>font16_title</font>
				<textcolor>grey</textcolor>
				<scroll>true</scroll>
				<label>[B]$VAR[FloorLabelVar][/B]</label>
				<textoffsetx>15</textoffsetx>
			</control>
			<control type="grouplist">
				<posx>1113</posx>
				<posy>625</posy>
				<width>685</width>
				<height>270</height>
                <itemgap>5</itemgap>
				<control type="label">
					<label>$INFO[ListItem.Genre]</label>
					<width>680</width>
					<height>40</height>
					<include>ShowCaseInfoPanelButtonsValues</include>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<label>$VAR[VideoSubLabelVar]</label>
					<width>680</width>
					<height>40</height>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
			</control>
			<control type="textbox">
				<label>$VAR[VideoPlotVar]</label>
				<posy>727</posy>
				<posx>1130</posx>
				<width>655</width>
				<height>247</height>
				<font>font14_textbox</font>
				<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
				<pagecontrol>61</pagecontrol>
				<include>ShowCaseInfoPanelButtonsValues</include>
			</control>
                       
            <control type="image">
                <posx>1113</posx>
                <posy>568</posy>
                <width>2</width>
                <height>510</height>
                <texture border="1">separator3.png</texture>
            </control>
            <control type="image">
                <posx>1115</posx>
                <posy>890</posy>
                <height>90</height>
                <width>684</width>
                <texture border="1">separator5.png</texture>
            </control>
            
            <control type="group">
                <posx>1140</posx>
                <posy>990</posy>
                <width>1815</width>
                <height>90</height>
                <orientation>horizontal</orientation>
                <include>VisibleFadeEffect</include>
                <visible>Container.Content(tvshows)</visible>               
                <control type="group">
                    <posy>-5</posy>
                    <width>175</width>
                    <visible>!IsEmpty(ListItem.Property(TotalSeasons))</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>2</posy>
                        <width>165</width>
                        <height>60</height>
                        <align>center</align>
                        <label>[B]$INFO[ListItem.Property(TotalSeasons)][/B]</label>
                        <font>font48</font>
                        <wrapmultiline>true</wrapmultiline>
                        <textcolor>grey2</textcolor>
                    </control>
                    <control type="label">
                        <posy>52</posy>
                        <width>165</width>
                        <height>30</height>
                        <align>center</align>
                        <label>[LOWERCASE]$VAR[OneOrMoreSeasonsVar][/LOWERCASE]</label>
                        <font>font12</font>
                        <textcolor>grey2</textcolor>
                    </control>
                </control>
                <control type="group">
                    <visible>!IsEmpty(ListItem.Property(TotalEpisodes))</visible>
                    <width>167</width>
                    <posx>165</posx>
                    <posy>-5</posy>
                    <control type="label">
                        <posx>0</posx>
                        <posy>2</posy>
                        <width>165</width>
                        <height>60</height>
                        <align>center</align>
                        <label>[B]$INFO[ListItem.Property(TotalEpisodes)][/B]</label>
                        <font>font48</font>
                        <wrapmultiline>true</wrapmultiline>
                        <textcolor>grey2</textcolor>
                    </control>
                    <control type="label">
                        <posy>52</posy>
                        <width>165</width>
                        <height>30</height>
                        <align>center</align>
                        <label>[LOWERCASE]$VAR[OneOrMoreEpisodesVar][/LOWERCASE]</label>
                        <font>font12</font>
                        <textcolor>grey2</textcolor>
                    </control>
                </control>                            
                <control type="image" id="800014">
                    <posx>330</posx>
                    <width>165</width>
                    <colordiffuse>grey2</colordiffuse>
                    <include>MediaFlagVars</include>
                    <bordersize>2</bordersize>
                    <texture>$INFO[ListItem.Studio,flags/studios/,.png]</texture>
                    <visible>!IsEmpty(Control.GetLabel(800014))</visible>
                </control>
                <control type="label">
                    <posx>330</posx>
                    <width>165</width>
                    <height>90</height>
                    <align>center</align>
                    <label>$INFO[ListItem.Studio]</label>
                    <font>font10</font>
                    <textcolor>white</textcolor>
                    <wrapmultiline>true</wrapmultiline>
                    <visible>IsEmpty(Control.GetLabel(800014))</visible>
                </control>
                <control type="image">
                    <posx>495</posx>
                    <colordiffuse>grey2</colordiffuse>
                    <include>MediaFlagVars</include>
                    <texture fallback="flags/mpaa/NR.png">$VAR[RatingFlagVar]</texture>
                </control>
            </control>
			<control type="scrollbar" id="61">
				<posx>1797</posx>
				<posy>725</posy>
				<width>14</width>
				<height>250</height>
				<onleft>505</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
			</control>
		</control>
	</include>

</includes>