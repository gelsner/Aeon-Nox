<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3010</defaultcontrol>
	<allowoverlay>true</allowoverlay>
	<zorder>1</zorder>
	<coordinates>
		<system>1</system>
		<left>729</left>
		<top>0</top>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="image">
			<width>1192</width>
			<height>1080</height>
			<texture border="4">dialogs/info/info_rightpaneltop.png</texture>
		</control>

		<control type="label" id="3000">
			<description>Person name</description>
			<left>40</left>
			<top>20</top>
			<width>1100</width>
			<height>30</height>
			<font>font15</font>
			<label>-</label>
			<align>center</align>
			<aligny>center</aligny>
			<textcolor>selected</textcolor>
			<shadowcolor>black</shadowcolor>
		</control>

        <control type="image" id="3009">
            <left>780</left>
            <top>93</top>
            <width>350</width>
            <height>350</height>
            <aspectratio>keep</aspectratio>
        </control>        
        
		<control type="textbox" id="3001">
			<description>text</description>
			<left>80</left>
			<top>93</top>
			<width>700</width>
			<height>425</height>
			<align>left</align>
			<label>-</label>
			<font>font15</font>
			<pagecontrol>3005</pagecontrol>
			<autoscroll delay="2500" time="1000">true</autoscroll>
		</control>

		<control type="panel" id="3010">
			<onup>-</onup>
			<ondown>-</ondown>
			<onleft>-</onleft>
			<onright>-</onright>
			<left>80</left>
			<top>570</top>
			<width>1100</width>
			<height>500</height>
			<scrolltime>200</scrolltime>
			<itemlayout height="250" width="220">
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>150</width>
					<height>200</height>
					<texture>$INFO[Listitem.Icon]</texture>
					<bordertexture border="5">button-nofocus.png</bordertexture>
					<bordersize>5</bordersize>
				</control>
			</itemlayout>
			<focusedlayout height="250" width="220">
				<control type="group">
					<animation type="Focus">
						<effect type="zoom" start="95" end="110" time="200" tween="sine" easing="inout" center="auto" />
						<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
					</animation>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>150</width>
						<height>200</height>
						<texture>$INFO[Listitem.Icon]</texture>
						<bordertexture border="5">button-nofocus.png</bordertexture>
						<bordersize>5</bordersize>
					</control>
				</control>
			</focusedlayout>
		</control>  

	</controls>
</window>
